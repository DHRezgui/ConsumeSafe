# ConsumeSafe Environment Configuration Template
# Copy this to .env and fill with your actual values

# ===== APPLICATION ===== 
ENV=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# ===== FRONTEND =====
FRONTEND_URL=http://localhost:3000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# ===== DATABASE =====
# CSV data path - relative to app directory
DATA_PATH=../data/boycott_products.csv

# ===== SECURITY =====
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===== AI SERVICE =====
AI_ENABLED=true
AI_MODEL=default
AI_MAX_TOKENS=500

# ===== MONITORING =====
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=8001

# ===== LOGGING =====
LOG_FORMAT=json
LOG_FILE=logs/consumesafe.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ===== DEPLOYMENT =====
# For Docker Compose
COMPOSE_PROJECT_NAME=consumesafe
COMPOSE_ENVIRONMENT=development

# For Kubernetes
K8S_NAMESPACE=consumesafe
K8S_ENVIRONMENT=production

# ===== INTEGRATIONS =====
# Optional: Slack notifications
SLACK_WEBHOOK_URL=

# Optional: Email configuration
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# ===== FEATURE FLAGS =====
FEATURE_AI_CHATBOT=true
FEATURE_RECOMMENDATIONS=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_NEWSLETTER=true
FEATURE_CSV_DOWNLOAD=true
FEATURE_STATISTICS=true

# ===== ANALYTICS (Optional) =====
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# ===== SSL/TLS =====
# For production HTTPS
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_ENABLED=false

# ===== DATABASE BACKUP =====
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_PATH=/backups/consumesafe

# ===== AUTHENTICATION (if needed in future) =====
AUTH_ENABLED=false
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== EXTERNAL APIs (if integrating future services) =====
# Example: For product image recognition
VISION_API_KEY=
VISION_API_ENDPOINT=

# Example: For sentiment analysis with cloud service
NLP_API_KEY=
NLP_API_ENDPOINT=
